{
  "private": true,
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint . && stylelint \"**/*.{css,scss}\"",
    "format": "eslint --fix . && stylelint --fix \"**/*.{css,scss}\"",
    "commit": "git add . && git-cz",
    "prepare": "npx simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.3",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@commitlint/cz-commitlint": "^17.5.0",
    "@iconify/json": "^2.2.69",
    "@nuxt/content": "^2.6.0",
    "@nuxt/image-edge": "1.0.0-28089316.69d3bcc",
    "@nuxthq/ui": "^2.1.0",
    "@nuxtjs/color-mode": "^3.2.0",
    "@nuxtjs/eslint-module": "^4.1.0",
    "@nuxtjs/fontaine": "^0.2.5",
    "@nuxtjs/stylelint-module": "^5.1.0",
    "@pinia/nuxt": "^0.4.11",
    "@unocss/eslint-config": "^0.52.3",
    "@unocss/nuxt": "^0.52.3",
    "@unocss/reset": "^0.52.3",
    "@vite-pwa/nuxt": "^0.0.9",
    "@vueuse/core": "^10.1.2",
    "@vueuse/nuxt": "^10.1.2",
    "commitizen": "^4.3.0",
    "consola": "^3.1.0",
    "dayjs-nuxt": "^1.1.0",
    "eslint": "^8.41.0",
    "inquirer": "^8.2.5",
    "lint-staged": "^13.2.2",
    "nuxt": "^3.5.1",
    "pinia": "^2.1.3",
    "reading-time": "^1.5.0",
    "sass": "^1.62.1",
    "simple-git-hooks": "^2.8.1",
    "stylelint": "^15.6.2",
    "stylelint-config-recommended-scss": "^12.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "typescript": "^5.0.4",
    "unocss-preset-scrollbar": "^0.2.1"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint  --edit ''"
  },
  "lint-staged": {
    "*.{ts,vue,json}": "eslint --fix --quiet",
    "*.{css,scss}": "stylelint --fix --quiet"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}