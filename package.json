{
  "private": true,
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint . && stylelint \"**/*.{css,scss}\"",
    "format": "eslint --fix . && stylelint --fix \"**/*.{css,scss}\"",
    "commit": "git add . && git-cz",
    "prepare": "npx simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.5",
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@commitlint/cz-commitlint": "^17.5.0",
    "@iconify/json": "^2.2.83",
    "@nuxt/content": "^2.7.0",
    "@nuxt/image-edge": "1.0.0-rc.1-28126030.07836ae",
    "@nuxthq/ui": "^2.4.1",
    "@nuxtjs/color-mode": "^3.3.0",
    "@nuxtjs/eslint-module": "^4.1.0",
    "@nuxtjs/fontaine": "^0.4.0",
    "@nuxtjs/stylelint-module": "^5.1.0",
    "@pinia/nuxt": "^0.4.11",
    "@unocss/eslint-config": "^0.53.4",
    "@unocss/nuxt": "^0.53.4",
    "@unocss/reset": "^0.53.4",
    "@vite-pwa/nuxt": "^0.1.0",
    "@vueuse/core": "^10.2.0",
    "@vueuse/nuxt": "^10.2.0",
    "@waline/client": "^2.15.5",
    "commitizen": "^4.3.0",
    "consola": "^3.1.0",
    "dayjs-nuxt": "^1.1.2",
    "eslint": "^8.43.0",
    "inquirer": "^8.2.5",
    "lint-staged": "^13.2.2",
    "nuxt": "^3.6.0",
    "nuxt-lodash": "^2.5.0",
    "nuxt-module-feed": "^1.0.3",
    "nuxt-simple-robots": "^2.3.0",
    "nuxt-simple-sitemap": "^2.7.0",
    "pinia": "^2.1.4",
    "reading-time": "^1.5.0",
    "sass": "^1.63.6",
    "simple-git-hooks": "^2.8.1",
    "stylelint": "^15.9.0",
    "stylelint-config-recommended-scss": "^12.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "typescript": "^5.1.3",
    "unocss-preset-scrollbar": "^0.2.1",
    "vue-tsc": "^1.8.1"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint  --edit ''"
  },
  "lint-staged": {
    "*.{js,ts,vue,json,yml}": "eslint --fix --quiet",
    "*.{css,scss}": "stylelint --fix --quiet"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}